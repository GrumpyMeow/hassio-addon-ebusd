{
  "name": "eBUSd",
  "version": "v21.2",
  "slug": "ebusd",
  "description": "eBUS daemon add-on",
  "uart": true,
  "url": "https://github.com/GrumpyMeow/hassio-addon-ebusd",
  "startup": "application",
  "services": [
    "mqtt:want"
  ],
  "ports": {
    "8888/tcp": 8888
  },
  "ports_description": {
    "8888/tcp": "tcp-listen port"
  },
  "init": false,
  "stage": "experimental",
  "panel_icon": "mdi:serial-port",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "options": {
    "device": "/dev/ttyUSB0",
    "mqtt": {
      "topic": "ebusd",
      "host": "localhost",
      "port": 1883,
      "user": "",
      "pass": ""
    }
  },
  "schema": {
    "device": "str",
    "mqtt": {
      "topic": "str",
      "host": "str?",
      "port": "int?",
      "user": "str?",
      "pass": "str?"
    }
  }
}
